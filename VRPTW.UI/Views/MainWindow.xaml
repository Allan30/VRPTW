<mah:MetroWindow x:Class="VRPTW.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:viewmodels="clr-namespace:VRPTW.UI.ViewModels"
        xmlns:ScottPlot="clr-namespace:ScottPlot;assembly=ScottPlot.WPF"
        Title="VRPTW"
        MinHeight="720"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <mah:MetroWindow.DataContext>
        <viewmodels:MainWindowViewModel/>
    </mah:MetroWindow.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="600" Width="*"/>
            <ColumnDefinition MinWidth="320" Width="320"/>
        </Grid.ColumnDefinitions>

        <ScottPlot:WpfPlot x:Name="PlotZone"/>

        <StackPanel Orientation="Vertical" Grid.Column="1">
            <Button Content="Choisir un fichier" Command="{Binding ChooseFileCommand}" />
            <Button Content="Démarrer" Command="{Binding StartVRPTWCommand}" />
        </StackPanel>
    </Grid>
</mah:MetroWindow>
