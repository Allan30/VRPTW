<mah:MetroWindow x:Class="VRPTW.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:viewmodels="clr-namespace:VRPTW.UI.ViewModels"
        xmlns:ScottPlot="clr-namespace:ScottPlot;assembly=ScottPlot.WPF"
        Title="VRPTW"
        MinWidth="800"
        Width="800"
        MinHeight="600"
        Height="600"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <mah:MetroWindow.DataContext>
        <viewmodels:MainWindowViewModel />
    </mah:MetroWindow.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="600" />
            <ColumnDefinition Width="200" MinWidth="180" MaxWidth="220" />
        </Grid.ColumnDefinitions>

        <ScottPlot:WpfPlot x:Name="PlotZone" MouseMove="OnPlotZoneMouseMoved" />

        <StackPanel Orientation="Vertical"
                    Grid.Column="1"
                    Margin="5">
            <Button Content="Choisir un fichier"
                    Command="{Binding ChooseFileCommand}" />
            <Button Content="Démarrer"
                    Command="{Binding StartVRPTWCommand}"
                    Margin="0,10,0,0" />
            <Label Content="Style du graphique"
                   Margin="0,10,0,0" />
            <ComboBox ItemsSource="{Binding AvailablePlotStyles}"
                      SelectedItem="{Binding SelectedPlotStyle}" />
            <Label Content="Thème de l'application"
                   Margin="0,10,0,0" />
            <ComboBox ItemsSource="{Binding AvailableAppThemes}"
                      SelectedItem="{Binding SelectedAppTheme}" />
        </StackPanel>
    </Grid>
</mah:MetroWindow>
